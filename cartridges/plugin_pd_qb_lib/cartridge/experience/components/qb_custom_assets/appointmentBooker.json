          {
            "id": "open_cal_button_text",
            "name": "Book appointment button text",
            "type": "text",
            "description": "Defaults to Book Appointment",
            "required": false
          },
          {
            "id": "confirm_text_1",
            "name": "Confirmation message text before date displayed",
            "type": "text",
            "description": "Defaults to 'Thank you, your appointment has been booked for'",
            "required": false
          },
          {
            "id": "confirm_text_2",
            "name": "Confirmation message text after date displayed",
            "type": "text",
            "description": "Defaults to 'We will send you a confirmation email shortly. We look forward to seeing you.'",
            "required": false
          }
        ]
      }
    ],
