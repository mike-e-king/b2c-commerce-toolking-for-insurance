            "required": false
          },
          {
            "id": "text_colour",
            "name": "Main Text Colour",
            "type": "text",
            "description": "Defaults to black",
            "required": false
          },
          {
            "id": "date_passed_colour",
            "name": "Dates in the Past Text Colour",
            "type": "text",
            "description": "Defaults to #c9c9c9- should be a faded version of the Main Text Colour",
            "required": false
          },
          {
            "id": "bg_colour",
            "name": "Background Colour",
            "type": "text",
            "description": "Defaults to white",
            "required": false
          },
          {
            "id": "head_colour",
            "name": "Header Colour",
            "type": "text",
            "description": "Defaults to rgba(0,0,0,.03)",
            "required": false
          },
          {
            "id": "days_text_colour",
            "name": "Days Header Text Colour",
            "type": "text",
            "description": "Defaults to #777777",
            "required": false
          },
          {
            "id": "date_colour",
            "name": "Date Background Colour",
            "type": "text",
            "description": "Defaults to rgba(0,0,0,.03)",
            "required": false
          },
          {
            "id": "selected_date_colour",
            "name": "Selected Date Background Colour",
            "type": "text",
            "description": "Defaults to #b9b7b7",
            "required": false
          },
          {
            "id": "selected_date_text_colour",
            "name": "Selected Date Text Colour",
            "type": "text",
            "description": "Defaults to white- ensure this is a contrasting colour to Selected Date Background Colour",
            "required": false
          },
          {
            "id": "button_colour",
            "name": "Button Colour",
            "type": "text",
            "description": "Defaults to rgba(0,0,0,.03)",
            "required": false
          }
        ]
      },
      {
        "id": "booker_text",
        "name": "Booker Text",
